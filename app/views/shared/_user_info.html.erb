<% @user ||= current_user %>
<div class="user_image">
  <%= render '/shared/user_image', { user: @user } %>
</div>
<%= link_to @user.name, @user, class: "name" %>
<div class="stats">
  <%= render 'shared/stats' %>
</div>
<span><i class="far fa-clone"></i> 投稿数: <%= @user.posts.count %></span>
<span><i class="far fa-calendar-alt"></i> 登録日: <%= @user.created_at.strftime('%Y/%m/%d') %></span>
