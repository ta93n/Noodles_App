<% @user ||= current_user %>
<div class="user_image">
  <% if @user.image.to_s.empty? %>
    <%= image_tag "/default_user.png" %>
  <% else %>
    <%= image_tag @user.image.url %>
  <% end %>
</div>
<%= link_to @user.name, @user, class: "name" %>
<div class="stats">
  <%= render 'shared/stats' %>
</div>
<span>投稿数: <%= @user.posts.count %></span>
<span>登録日: <%= @user.created_at.strftime('%Y/%m/%d') %></span>
