<%= form_with url: request.url, method: :get, local: true do |f| %>
  <%= f.select :sort, options_for_select([
    ["投稿が新しい順", "created_at desc"],
    ["投稿が古い順", "created_at asc"],
    ["評価が高い順", "rate desc"],
    ["評価が低い順", "rate asc"]
    ], @selected_sort), {include_blank: false}, {onchange: 'this.form.submit()'} %>
<% end %>
