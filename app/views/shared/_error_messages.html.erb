<% if object.errors.any? %> <!-- それぞれのフォームで変数fをf.objectとしているので、関連付けられたオブジェクトにobjectでアクセスすることができる -->
  <div id="error_explanation">
    <div class="alert alert-danger">
     <%= object.errors.count%>箇所のエラーがあります。
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
