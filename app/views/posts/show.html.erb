<div class="container">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
      <%= render 'users/follow_form' if logged_in? %>
      <% if @user == current_user %>
        <%= link_to "投稿する", new_post_path, class: "btn btn-warning btn-lg btn-block" %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <section class="main_section">
      <ol class="posts">
        <li id="post-<%= @post.id %>">
          <div class="post_header" style="border-top: none;">
            <%= render '/shared/user_image', { user: @post.user } %>
            <span><%= link_to @post.user.name, @post.user %> が食べたラーメン</span>
            <%= render '/posts/post_menu', { post: @post } %>
          </div>
          <div class="post_show">
            <div class="post_picture">
              <%= image_tag @post.picture.url if @post.picture? %>
            </div>
            <div class="post_information">
              <span class="shop_name">店名: <%= @post.shop_name %></span>
              <span class="nearest">最寄駅: <%= @post.nearest %></span>
              <span class="content">説明文: <%= simple_format(@post.content) %></span>
              <div class="post_information_bottom">
                <span class="like"><%= render "likes/like", post: @post %></span>
                <span class="timestamp"><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %>に投稿</span>
              </div>
            </div>
            <div class="post_map">
              <div id="map"></div>
            </div>
            <div class="post_comments">
              <h4>コメント（<%= @post.comments.count %>）</h4>
              <% if @comments.any? %>
                <ol class="post_comments_list">
                  <%= render 'posts/post_comments' %>
                </ol>
              <% else %>
                <p>コメントはありません。</p>
              <% end %>
              <div class="post_comments_form">
                <%= form_for [@post, @comment] do |f| %>
                  <%= render 'shared/error_messages', object: f.object %>
                  <%= f.text_area :content, class: 'form-control' %>
                  <%= f.hidden_field :post_id, value: @post.id %>
                  <%= f.submit "コメントする", class: "btn btn-warning" %>
                <% end %>
              </div>
            </div>
          </div>
        </li>
      </ol>
    </section>
  </div>
</div>
<%= render 'posts/show_map' %>
