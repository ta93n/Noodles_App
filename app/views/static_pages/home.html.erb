<% provide(:title, 'ホーム') %>
<div class="contents">
  <% if logged_in? %>
    <%= render 'shared/sidebar' %>
  <% end %>
  <section class="main_section">
    <%= render 'shared/feed' %>
  </section>
  <% if logged_in? %>
    <aside>
      <section class="user_info">
        <label for="sidebar" class="close">×</label>
        <%= render 'shared/user_info' %>
        <%= render 'shared/post_btn' %>
      </section>
    </aside>
    <%= render 'shared/post_btn_responsive' if logged_in? %>
  <% end %>
</div>
