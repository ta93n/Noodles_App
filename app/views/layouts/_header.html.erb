<header class="navbar-fixed-top">
  <div class="header-left">
    <%= link_to "Noodles", root_path, id: "logo" %>
    <%= link_to image_tag("/noodle.png", :size => '30x30'), root_path %>
  </div>
  <div class="header-right">
    <div class="post_search">
      <%= form_with url: root_path do |f| %>
        <%= f.text_field :search, class: 'form-control'  %>
        <%= f.button :type => "submit" do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to root_path do %><i class="fas fa-home"></i> ホーム<% end %></li>
      <li><%= link_to maps_path do %><i class="fas fa-map-marked-alt"></i> 地図から投稿検索<% end %></li>
      <% if logged_in? %>
        <li><%= link_to users_path do %><i class="fas fa-users"></i> 利用者一覧<% end %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fas fa-user-circle"></i> アカウント <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to current_user do %><i class="far fa-user"></i> プロフィール<% end %></li>
            <li><%= link_to edit_user_path(current_user) do %><i class="fas fa-cog"></i> 設定<% end %></li>
            <li class="divider"></li>
            <li>
              <%= link_to logout_path, method: :delete do %><i class="fas fa-times"></i> ログアウト<% end %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to login_path do %><i class="fas fa-sign-in-alt"></i> ログイン<% end %></li>
        <li><%= link_to signup_path do %><i class="fas fa-user-plus"></i> ユーザー登録<% end %></li>
      <% end %>
    </ul>
    <%= render '/layouts/menu_icon' %>
  </div>
</header>
