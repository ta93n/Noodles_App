
<!DOCTYPE html>
<html>
  <head>
    <title>Noodles</title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="main">
      <% flash.each do |message_type, message| %>
        <div class="row">
          <div class="alert alert-<%= message_type %> col-md-4 col-md-offset-4"><%= message %></div>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
