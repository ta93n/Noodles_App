<div class="section_title">
  <ul>
    <li>
      <%= link_to @user, class: "one", remote: true do %>
        <i class="far fa-clone"></i> 投稿 (<%= @user.posts.count %>)
      <% end %>
    </li>
    <li>
      <%= link_to likes_user_path(@user), class: "two current", remote: true do %>
        <i class="far fa-heart"></i> 食べたい！(<%= @user.likes.count %>)
      <% end %>
    </li>
</div>
<% if @posts.any? %>
  <ul class="posts like">
    <% @posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </ul>
  <%= will_paginate @posts %>
<% else %>
  <div class="no-contents">
    <h3><%= @user.name %>の「食べたい！」はありません。</h3>
    <%= image_tag "/noodle.png", :size => '100x100' %>
  </div>
<% end %>
