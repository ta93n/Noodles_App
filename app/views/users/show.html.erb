<div class="container">
  <aside class="col-md-3">
    <section class="user_info">
      <% if @user.image.to_s.empty? %>
        <%= image_tag "/default_user.png", :size => '100x100'%>
      <% else %>
        <%= image_tag @user.image.url, :size => '100x100'%>
      <% end %>
      <h3><%= @user.name %></h3>
      <span>投稿数: <%= @user.posts.count %></span>
      <span>登録日: <%= @user.created_at.strftime('%Y/%m/%d') %></span>
    </section>
  </aside>
  <div class="col-md-9">
    <% if @user.posts.any? %>
      <h3><%= @user.name %>の投稿 (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% else %>
      <div class="no-posts">
        <h3><%= @user.name %>の投稿はありません。</h3>
        <%= image_tag "/noodle.png", :size => '100x100'%>
      </div>

    <% end %>
  </div>
</div>
