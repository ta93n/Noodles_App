<div class="main">
  <section class="user_info">
    <%= render 'shared/user_info' %>
    <%= render 'follow_form' if logged_in? %>
    <%= render 'shared/post_btn' if @user == current_user %>
  </section>
  <section class="main_section">
    <div class="section_title">
      <ul>
        <li>
          <%= link_to @user, class: "one current" do %>
            <i class="far fa-clone"></i> 投稿 (<%= @user.posts.count %>)
          <% end %>
        </li>
        <li>
          <%= link_to likes_user_path(@user), class: "two" do %>
            <i class="far fa-heart"></i> 食べたい！(<%= @user.likes.count %>)
          <% end %>
        </li>
      </ul>
    </div>
    <% if @user.posts.any? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% else %>
      <div class="no-contents">
        <h3><%= @user.name %>の投稿はありません。</h3>
        <% if @user == current_user %>
          <h3>投稿してみましょう。</h3>
          <%= link_to image_tag("/note.png", :size => '100x100', alt: "投稿する"),
                                                                  new_post_path %>
        <% else %>
          <%= image_tag "/noodle.png", :size => '100x100' %>
        <% end %>
      </div>
    <% end %>
  </section>
  <section class="search_section">
    <h3>工事中</h3>
  </section>
</div>
