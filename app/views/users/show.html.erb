<div class="container">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="user_image">
        <% if @user.image.to_s.empty? %>
          <%= image_tag "/default_user.png" %>
        <% else %>
          <%= image_tag @user.image.url %>
        <% end %>
      </div>
      <p class="name"><%= @user.name %></p>
      <span>投稿数: <%= @user.posts.count %></span>
      <span>登録日: <%= @user.created_at.strftime('%Y/%m/%d') %></span>
      <% if @user == current_user %>
        <%= link_to "投稿する", new_post_path, class: "btn btn-warning btn-lg btn-block" %>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <section class="post_section">
    <% if @user.posts.any? %>
      <div class="section_title">
        <h3><%= @user.name %>の投稿 (<%= @user.posts.count %>)</h3>
      </div>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% else %>
      <div class="section_title">
        <h3><%= @user.name %>の投稿 (<%= @user.posts.count %>)</h3>
      </div>
      <div class="no-posts">
        <h3><%= @user.name %>の投稿はありません。</h3>
        <% if @user == current_user %>
          <h3>投稿してみましょう。</h3>
          <%= link_to image_tag("/note.png", :size => '100x100', alt: "投稿する"),
                                                                    new_post_path %>
        <% else %>
          <%= image_tag "/noodle.png", :size => '100x100' %>
        <% end %>
      </div>
    <% end %>
    </section>
  </div>
</div>
