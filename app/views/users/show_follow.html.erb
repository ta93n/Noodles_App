<% provide(:title, @user.name) %>
<div class="contents">
  <%= render 'shared/sidebar' %>
  <div class="main_section follow">
    <div class="section_title">
      <h3><%= @title %></h3>
    </div>
    <% if @users.any? %>
      <ul class="users_index">
        <% @users.each do |user| %>
          <%= render 'users/user', user: user %>
        <% end %>
      </ul>
      <%= will_paginate %>
    <% else %>
      <div class="no-contents">
        <h3>まだ誰もいないようです。</h3>
        <%= image_tag "/noodle.png", :size => '100x100' %>
      </div>
    <% end %>
  </div>
  <aside>
    <section class="user_info">
      <label for="sidebar" class="close">×</label>
      <div class="user_image">
        <%= render '/shared/user_image', { user: @user } %>
      </div>
      <%= render 'shared/user_info' %>
      <%= render 'follow_form' if logged_in? %>
      <%= render 'shared/post_btn' if @user == current_user %>
    </section>
  </aside>
  <%= render 'shared/post_btn_responsive' if logged_in? %>
</div>
