<div class="main">
  <section class="user_info">
    <%= render 'shared/user_info' %>
    <%= render 'follow_form' if logged_in? %>
    <%= render 'shared/post_btn' if @user == current_user %>
  </section>
  <div class="main_section">
    <div class="section_title">
      <ul>
        <li>
          <%= link_to @user, class: "one" do %>
            <i class="far fa-clone"></i> 投稿 (<%= @user.posts.count %>)
          <% end %>
        </li>
        <li>
          <%= link_to likes_user_path(@user), class: "two current" do %>
            <i class="far fa-heart"></i> 食べたい！(<%= @user.likes.count %>)
          <% end %>
        </li>
    </div>
    <% if @posts.any? %>
      <ul class="posts like">
        <% @posts.each do |post| %>
          <%= render 'posts/post', post: post %>
        <% end %>
      </ul>
      <%= will_paginate @posts %>
    <% else %>
      <div class="no-contents">
        <h3><%= @user.name %>の「食べたい！」はありません。</h3>
        <%= image_tag "/noodle.png", :size => '100x100' %>
      </div>
    <% end %>
  </div>
  <section class="search_section">
    <h3>工事中</h3>
  </section>
</div>
