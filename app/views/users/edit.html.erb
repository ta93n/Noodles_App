<div class="form_page">
  <div class="form">
    <h3>アカウント設定</h3>
    <% if @user == @test_user %>
      <p class="caution">※「お試しログイン」の場合、アカウント情報の変更はできません。</p>
    <% end %>
    <%= form_for(@user,{multipart: true}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :名前 %>
      <%= f.text_field :name, readonly: @user == @test_user, class: 'form-control', placeholder: "16文字以内" %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email, readonly: @user == @test_user, class: 'form-control', placeholder: "user@example.com" %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, readonly: @user == @test_user, class: 'form-control', placeholder: "6文字以上" %>

      <%= f.label :パスワード（確認） %>
      <%= f.password_field :password_confirmation, readonly: @user == @test_user, class: 'form-control', placeholder: "パスワードをもう一度入力してください。" %>

      <%=f.label :image,"ユーザー画像" %>
      <div class="edit_image">
        <% if @user.image.to_s.empty? %>
          <%= image_tag "/default_user.png" %>
        <% else %>
          <%= image_tag @user.image.url %>
        <% end %>
      </div>
      <% if @user != @test_user %>
        <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: 'form-control' %>
      <% end %>
      <%= f.submit "変更を保存", class: "btn btn-warning btn-block" %>
    <% end %>
  </div>
</div>
